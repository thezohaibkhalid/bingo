<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BingoArena" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary_foreground</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/card</item>
        <item name="colorOnSurface">@color/foreground</item>

        <item name="colorError">@color/destructive</item>
        <item name="colorOnError">@color/destructive_foreground</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/card</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorPrimary">@color/foreground</item>
        <item name="android:textColorSecondary">@color/muted_foreground</item>

        <item name="materialButtonStyle">@style/Widget.BingoArena.Button.Primary</item>
    </style>

    <style name="Theme.BingoArena.Splash" parent="Theme.BingoArena">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TextAppearance.BingoArena.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="TextAppearance.BingoArena.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="TextAppearance.BingoArena.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="TextAppearance.BingoArena.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <style name="TextAppearance.BingoArena.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/muted_foreground</item>
    </style>

    <style name="TextAppearance.BingoArena.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/muted_foreground</item>
    </style>

    <style name="Widget.BingoArena.Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.BingoArena.Button.Primary" parent="Widget.BingoArena.Button.Base">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/primary_foreground</item>
        <item name="rippleColor">@color/primary_20</item>
    </style>

    <style name="Widget.BingoArena.Button.Secondary" parent="Widget.BingoArena.Button.Base">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/secondary_foreground</item>
        <item name="rippleColor">@color/primary_20</item>
    </style>

    <style name="Widget.BingoArena.Button.Neutral" parent="Widget.BingoArena.Button.Base">
        <item name="backgroundTint">@color/card</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="rippleColor">@color/primary_20</item>
    </style>

    <style name="Widget.BingoArena.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/primary_20</item>
    </style>

    <style name="Widget.BingoArena.Button.Ghost" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/foreground</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/primary_20</item>
    </style>

    <style name="Widget.BingoArena.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input</item>
        <item name="boxStrokeColor">@color/border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/muted_foreground</item>
        <item name="android:textColorHint">@color/muted_foreground</item>
    </style>

    <style name="Widget.BingoArena.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.BingoArena.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/card</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.BingoArena.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/transparent</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/foreground</item>
        <item name="tabTextColor">@color/muted_foreground</item>
        <item name="tabRippleColor">@color/primary_20</item>
    </style>

    <style name="OtpInputStyle">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/space_grotesk_bold</item>
    </style>
</resources>
