<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_x"
            app:tint="@color/foreground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/space_grotesk_bold"
            android:text="Verify Your Email"
            android:textColor="@color/foreground"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_avatar">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mail"
                    app:tint="@color/primary" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/space_grotesk_bold"
                android:text="Enter Verification Code"
                android:textColor="@color/foreground"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Code sent to email@example.com"
                android:textColor="@color/muted_foreground"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="Code expires in 5:00"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/otpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etOtp1"
                    style="@style/OtpInputStyle"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:digits="0123456789"
                    android:importantForAutofill="no"
                    android:autofillHints="smsOTP"
                    android:imeOptions="actionNext" />

                <EditText
                    android:id="@+id/etOtp2"
                    style="@style/OtpInputStyle"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="0123456789"
                    android:importantForAutofill="no"
                    android:imeOptions="actionNext" />

                <EditText
                    android:id="@+id/etOtp3"
                    style="@style/OtpInputStyle"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="0123456789"
                    android:importantForAutofill="no"
                    android:imeOptions="actionNext" />

                <EditText
                    android:id="@+id/etOtp4"
                    style="@style/OtpInputStyle"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="0123456789"
                    android:importantForAutofill="no"
                    android:imeOptions="actionNext" />

                <EditText
                    android:id="@+id/etOtp5"
                    style="@style/OtpInputStyle"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="0123456789"
                    android:importantForAutofill="no"
                    android:imeOptions="actionNext" />

                <EditText
                    android:id="@+id/etOtp6"
                    style="@style/OtpInputStyle"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="0123456789"
                    android:importantForAutofill="no"
                    android:imeOptions="actionDone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_regular"
                android:text="Invalid code. Please try again."
                android:textColor="@color/destructive"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnVerify"
                style="@style/Widget.BingoArena.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="32dp"
                android:enabled="false"
                android:alpha="0.5"
                android:text="Verify Code"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Didn't receive the code? "
                    android:textColor="@color/muted_foreground"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnResend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_medium"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="0dp"
                    android:text="Resend"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
